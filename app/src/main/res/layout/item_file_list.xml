<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <CheckBox
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:id="@+id/ckb_item_fileList_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:src="@mipmap/icon_filemgr"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ckb_item_fileList_delete"
        android:id="@+id/img_item_fileList_fileIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_item_fileList_fileIcon"
        android:id="@+id/txt_item_fileList_fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txt_item_fileList_fileName"
        android:id="@+id/txt_item_fileList_fileSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>